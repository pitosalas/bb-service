<project>
  <!-- the version of maven's project object model -->

  <pomVersion>3</pomVersion>
  <!-- a unique name for this project -->

  <id>bbservice</id>
  <!-- a short but descriptive name for the project -->

  <name>BlogBridge Service</name>
  <!-- The version of the project under development, e.g.
       1.1, 1.2, 2.0-SNAPSHOT -->

  <currentVersion>2.2</currentVersion>
  <!-- details about the organization that 'owns' the project -->

  <organization>
    <name>Salas Associates</name>
    <url>http://www.salas.com/</url>
  </organization>
  <!-- the year the project started -->

  <inceptionYear>2004</inceptionYear>
  <package>com.salas.bbservice</package>
  <description>BlogBridge Service is a server-side counterpart of
    BlogBridge application which is intended to support users
    database, provide different services to the registered
    users.</description>
  <!-- a short description of what the project does -->

  <shortDescription>Server-side counterpart of BlogBridge.</shortDescription>
  <!-- the project home page -->

  <url>http://www.blogbridge.com/</url>
  <siteAddress>www.blogbridge.com</siteAddress>
  <siteDirectory>/www/bbservice</siteDirectory>
  <distributionDirectory>/www/bbservice/builds/</distributionDirectory>
  <!-- the version control repository and http url for online access
       the connection element has the form:
       scm:<system>:<system specific connection string> -->

  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/root/blogbridge:bbservice</connection>
  </repository>
  <!-- any mailing lists for the project -->

  <mailingLists/>
  <!-- who the developers are for the project -->

  <developers>

    <developer>
      <name>Pito Salas</name>
      <id>pitosalas</id>
      <email>rps@salas.com</email>
      <organization>Salas Associates</organization>
      <roles>
        <role>Lead</role>
        <role>Developer</role>
      </roles>
      <timezone>-5</timezone>
    </developer>

    <developer>
      <name>Aleksey Gureev</name>
      <id>spyromus</id>
      <email>spyromus@noizeramp.com</email>
      <organization>[noizeramp]</organization>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>2</timezone>
    </developer>

  </developers>

